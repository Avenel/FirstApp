

<!-- EE-Konto:  :ktoNr, :bankId, :kreditlimit -->

<h1>EEKonto</h1>
<h2>Neues EEKonto</h2>

<%= form_tag({:action => "save"}, :id=>"newForm") do %>

  <h2 style="margin-top:40px;">OZB-Konto</h2>
  <table style="margin: 10px auto;">
    <tr>
      <td>Konto-Nr.:</td>
      <td><%= label_tag :ozbKtoNr, @newKtoNr %> <%= hidden_field_tag :ozbKtoNr, @newKtoNr%></td>
    </tr>
    <tr>
      <td>wSaldo:</td>
      <td><%= text_field_tag :wSaldo %></td>
    </tr>
    <tr>
      <td>pSaldo:</td>
      <td><%= text_field_tag :pSaldo %></td>
    </tr>
    <tr>
      <td>SaldoDatum:</td>
      <td><%= text_field_tag :saldoDatum, "", :id => "saldoDatum" %></td>
    </tr>
    <tr>
      <td>KKL:</td>
      <td><%= text_field_tag :kkl%></td>
    </tr>
  </table>
  
  
  <h2 style="margin-top:20px;">EE-Konto</h2>
  <table>
    <tr>
      <td>Konto-Nr.:</td>
      <td><%= label_tag :ozbKtoNr, @newKtoNr %></td>
    </tr>
    <tr>
      <td>Kreditlimit:</td>
      <td><%= text_field_tag :kreditlimit %></td>
    </tr>
  </table>
  

<!-- Bankverbindung:  :id, :bankKtoNr, :blz, :bic, :iban, :bankName -->
  <h3 style="margin-top:20px;">Bankverbindung</h2>
  <table>
    <tr>
      <td>Bank-Konto-Nr.:</td>
      <td><%= text_field_tag :bankKtoNr %></td>
    </tr>
    <tr>
      <td>Bankname</td>
      <td><%= text_field_tag :bankName %></td>
    </tr>
    <tr>
      <td>Bankleitzahl:</td>
      <td><%= text_field_tag :blz %></td>
    </tr>
    <tr>
      <td>BIC:</td>
      <td><%= text_field_tag :bic %></td>
    </tr>
    <tr>
      <td>IBAN:</td>
      <td><%= text_field_tag :iban %></td>
    </tr>
  </table>
  
  <br />
  <%= link_to_function "Speichern", "this.form.submit()", :onclick => "$('#newForm').submit(); return false;", :class => "submit_ok"  %>
  
<% end %>

<script>
  $(function() {
    $( "#saldoDatum" ).datepicker({
      dateFormat: 'dd.mm.yy'
    });
  });
</script>
