<h1>EEKonto</h1>
<h2>Neues EEKonto</h2>

<%= form_for @ozb_konto, :url => { :action => "create" }, :html => {:id => "newForm"}  do |f| %>

  <% if !@errors.nil? && @errors.any? %>
  <div id="error_explanation">
    <% error_count = 0 %>
    <% @errors.each do |error| %>
      <% if !error.nil? && error.any? %>
        <% error_count += error.count %>
      <% end %>
    <% end %>
    <h2><%= error_count %> Fehler <br /> Konnte kein Konto anlegen, weil:</h2>

    <ul>
      <% @errors.each do |error| %>
        <% if !error.nil? && error.any? %>
          <% error.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
  <% end %>

  <h2 style="margin-top:40px;">OZB-Konto</h2>
  <table style="margin: 10px auto;">
    <tr>
      <td>Konto-Nr.:</td>
      <td><%= f.text_field :ktoNr %></td>
    </tr>
    <tr>
      <td>wSaldo:</td>
      <td><%= f.text_field :wSaldo %></td>
    </tr>
    <tr>
      <td>pSaldo:</td>
      <td><%= f.text_field :pSaldo %></td>
    </tr>
    <tr>
      <td>SaldoDatum:</td>
      <td><%= f.text_field :saldoDatum, :id => "saldoDatum" %></td>
    </tr>
    <tr>
      <td>KKL:</td>
      <td><%= text_field_tag :kkl%></td>
    </tr>
  </table>
  
  
  <h2 style="margin-top:20px;">EE-Konto</h2>
  <table>
    <tr>
      <td>Kreditlimit:</td>
      <td><%= text_field_tag :kreditlimit %></td>
    </tr>
  </table>
  

<!-- Bankverbindung:  :id, :bankKtoNr, :blz, :bic, :iban, :bankName -->
  <h3 style="margin-top:20px;">Bankverbindung</h2>
  <table>
    <tr>
      <td>Bank-Konto-Nr.:</td>
      <td><%= text_field_tag :bankKtoNr %></td>
