<h1>Kontenklasse ändern</h1>
<%= link_to "zurück", "/" %>

<div id="searchKtoNrFrame" style="margin: 50px auto; ">
  <div id="konten">
    <% @kklCheck = true %>
    <%= render :partial => 'application/suche_konten', :locals => {:action => "kkl"} %>
  </div>  
</div>



<script>
$(document).ready(function() {
  $("kklRow").css("display", "block");
  
  $("#kklAuswahl").change(function () {
    if( $("#checkedAll").attr("checked") == "checked" ) {
      $(this).css("color", "red");
      $("select#kkl_").val( $("#kklAuswahl").val() );
    }    
  });
  
  $("select#kkl_").change(function() {
    $(this).css("color", "red");
  })
  
  $("#checkedAll").change(function () {
    if( $("#checkedAll").attr("checked") == "checked" ) {
      $("select#kkl_").val( $("#kklAuswahl").val() );
      $("select#kkl_").css("color", "red");
    } 
    else {
      $("#kklAuswahl").css("color", "black");
    }
  });
});
</script>
