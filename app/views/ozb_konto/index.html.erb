<h2>OZB Konten</h2>

<h3 style="margin-top: 40px;">OZB Konto</h3> 
<table style="margin: 10px auto;">
  <tr>
    <th>Konto-Nr</th>
    <th>Mitglieds-Nr</th>
    <th>Mitglied</th>
    <th>ktoEinrDatum</th>
    <th>wSaldo</th>
    <th>pSaldo</th>
    <th>Saldo Datum</th>
  </tr>
  
  <tr>
    <td><%= @ozb_konto.ktoNr %></td>
    <td><%= @ozb_konto.mnr %></td>
    <% person = Person.where(:pnr => OZBPerson.where(:mnr => @ozb_konto.mnr).first.ueberPnr).first %>
    <% if !person.nil? %>
      <td><%= person.name.to_s + ", "+ person.vorname.to_s %></td>
    <% else %>
      <td>-</td>
    <% end %>
    <td><%= @ozb_konto.ktoEinrDatum %></td>
    <td><%= @ozb_konto.wSaldo %></td>
    <td><%= @ozb_konto.pSaldo %></td>
    <td><%= @ozb_konto.saldoDatum %></td>
  </tr>
</table>


