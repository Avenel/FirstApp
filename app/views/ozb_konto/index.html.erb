<h1>OZB Konten</h1>



<!-- :ktoNr, :eeKtoNr,:zeNr, :zeAbDatum, :zeEndDatum, :zeBetrag, 
     :laufzeit, :zahlModus, :tilgRate, :ansparRate, :kduRate, :rduRate, :zeStatus -->

<h3 style="margin-top: 20px;">ZE-Konten</h3> 
<table>
  <tr>
    <th>Konto-Nr.</th>
    <th>EEKonto-Nr.</th>
    <th>ZE-Nr.</th>
    <th>AbDatum</th>
    <th>EndDatum</th>
    <th>Betrag</th>
    <th>Laufzeit</th>
    <th>Zahlmodus</th>
    <th>Tilgungsrate</th>
    <th>Ansparrate</th>
    <th>Kdu-Rate</th>
    <th>Rdu-Rate</th>
    <th>Status</th>
    <th />
    <th />
  </tr>

  <% i = 0 %>
  <% @ze_konten.each do |konto| %>
    <% if i%2 == 0 then bg_color="white" else bg_color="lightgrey" end %>
    <tr style="background:<%= bg_color %>;">
      <td><%= konto.ktoNr %></td>
      <td><%= konto.eeKtoNr %></td>
      <td><%= konto.zeNr %></td>
      <td><%= konto.zeAbDatum %></td>
      <td><%= konto.zeEndDatum %></td>
      <td><%= konto.zeBetrag %></td>
      <td><%= konto.laufzeit %></td>
      <td><%= konto.zahlModus %></td>
      <td><%= konto.tilgRate %></td>
      <td><%= konto.ansparRate %></td>
      <td><%= konto.kduRate %></td>
      <td><%= konto.rduRate %></td>
      <td><%= konto.zeStatus %></td>
      <td><%= link_to "Editieren", "/OZBPerson/"+params[:id]+"/Konto/ZE/"+konto.ktoNr.to_s %></td>
      <td><%= link_to "Löschen", "/OZBPerson/"+params[:id]+"/Konto/ZE/"+konto.ktoNr.to_s+"/delete" %></td>
    </tr>
    <% i += 1 %>
  <% end %>
</table>
<% if @ze_count < 4 then %>
  <%= link_to "Neues ZE-Konto hinzufügen", "/OZBPerson/"+params[:id]+"/Konto/ZE/new" %>
<% end %>

