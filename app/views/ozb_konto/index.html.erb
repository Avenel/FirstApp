<h3 style="margin-top: 20px;">EE-Konten</h3> 
<table>
  <tr>
    <th>Konto-Nr.</th>
    <th>Bank-Id</th>
    <th>Bank-Konto-Nr.</th>
    <th>Bankleitzahl</th>
    <th>Bankname</th>
    <th>Kreditlimit</th>
    <th />
    <th />
  </tr>
 
  <% i = 0 %>
  <% @ee_konten.each do |konto| %>
    <% if i%2 == 0 then bg_color="white" else bg_color="lightgrey" end %>
    <tr style="background:<%= bg_color %>;">
      <td><%= konto.ktoNr %></td>
      <td><%= konto.bankId %></td>
      
      <% bankverbindung = Bankverbindung.where(:id => konto.bankId).first %>      
      <td><%= bankverbindung.bankKtoNr %></td>
      <td><%= bankverbindung.blz %></td>
      <td><%= bankverbindung.bankName %></td>
      <td><%= konto.kreditlimit %></td>
      <td><%= link_to "Editieren", "/OZBPerson/"+params[:id]+"/Konto/EE/"+konto.ktoNr.to_s %></td>
      <td><%= link_to "Löschen", "/OZBPerson/"+params[:id]+"/Konto/EE/"+konto.ktoNr.to_s+"/delete" %></td>
    </tr>
    <% i += 1 %>
  <% end %>
</table>
<% if @ee_count < 3 then %>
  <%= link_to "Neues EE-Konto hinzufügen", "/OZBPerson/"+params[:id]+"/Konto/EE/new" %>
<% end %>
