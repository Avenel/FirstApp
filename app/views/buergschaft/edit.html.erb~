<h1>Edtieren</h1>
<%= link_to "zurÃ¼ck", "/buergschaften" %>


<% buergschafter = Person.where(:pnr => @buergschaft.pnrB).first %>
<% gesellschafter = Person.where( :pnr => OZBPerson.where(:mnr => @buergschaft.mnrG).first.ueberPnr ).first %>

<%= form_tag({:action => "save"}, :id=>"editForm") do %>

  <p> 
    <%= label_tag "Buergschafter:" %>
    <%= label_tag :nameB, buergschafter.name.to_s + "," + buergschafter.vorname.to_s %>  
    <%= hidden_field_tag :pnrB, @buergschaft.pnrB %>  
  </p>
  
  <p>
    <%= label_tag "Gesellschafter:" %>  
    <%= label_tag :nameG, gesellschafter.name.to_s + "," + gesellschafter.vorname.to_s %>  
    <%= hidden_field_tag :mnrG, @buergschaft.mnrG %>  
  </p>  
  
  <p>
    <%= label_tag "sichAbDatum:" %>
    <%= label_tag :sichAbDatum, @buergschaft.sichAbDatum %>  
    <%= hidden_field_tag :sichAbDatum, @buergschaft.sichAbDatum %>  
  </p>
  
  <p>
    <%= label_tag "Konto-Nr.:" %>
    <%= text_field_tag :ktoNr, @buergschaft.ktoNr %>
    <%= link_to "Suchen...", "#searchKtoNrFrame", :id => "searchKtoNr" %>  
  </p>
  
  <p>
    <%= label_tag "sichEndDatum:" %>
    <%= text_field_tag :sichEndDatum, @buergschaft.sichEndDatum %>  
  </p>
  
  <p>
    <%= label_tag "sichBetrag:" %>
    <%= text_field_tag :sichBetrag, @buergschaft.sichBetrag %>  
  </p>
  
  <p>
    <%= label_tag "sichKurzBez:" %>
    <%= text_field_tag :sichKurzBez, @buergschaft.sichKurzBez %>  
  </p>
  
  <%= link_to_function "Ok", "this.form.submit()", :onclick => "$('#editForm').submit(); return false;" %>	

<% end %>

<script>
  $(function() {
    $( "#sichEndDatum" ).datepicker({
      dateFormat: 'yy-mm-dd'
    });
  });
</script>


<div style="display:none">
  <div id="searchKtoNrFrame">
    <div id="konten"><%= render 'konten' %></div>  
  </div>
</div>


<script>
  $(document).ready(function() {
    $("#searchKtoNr").fancybox();
  });
</script>

<script>
  $(function () {  
    $('.a .pagination a').live('click',
      function () {  
        $.getScript(this.href);  
        return false;  
      }   
    );  
  });    
  
  // Search form.  
  $('#searchForm').submit(function () {  
    $.get(this.action, $(this).serialize(), null, 'script');  
    return false;  
  }); 
</script> 
