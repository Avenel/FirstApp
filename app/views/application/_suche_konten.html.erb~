<script>
  $(function () {  
    $('.pagination a').live('click',
      function () {  
        $.getScript(this.href);  
        return false;  
      }   
    );  
  });    
  
  // Search form.  
  $('#searchKtoNrForm').submit(function () {  
    $.get('/application/suche_konten.js', $(this).serialize(), null, 'script');  
    return false;  
  }); 
  
  $(function() {
    $( "#ktoEinrDatum" ).datepicker({
      dateFormat: 'yy-mm-dd'
    });
  });
</script> 
