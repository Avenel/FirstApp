			<%= label_tag "Wohnsitzfinanzamt:" %>
			<%= text_field_tag :wohnsitzFinanzamt, @Gesellschafter.wohnsitzFinanzamt %>  
		</p>

  		<p>
			<%= label_tag "Notar:" %>
			<%= text_field_tag :notarPnr, @Gesellschafter.notarPnr %>  
		</p>

  		<p>
			<%= label_tag "Beurkundungsdatum:" %>
			<%= text_field_tag :beurkDatum, @Gesellschafter.beurkDatum %>  
		</p>
  	</div>
  	<% end %>
  	
  	<% if @Foerdermitglied != nil %>
  	<div name="Foerdermitglied">
  		<p>
			<%= label_tag "Region" %>
			<%= text_field_tag :region, @Foerdermitglied.region %>  
		</p>

  		<p>
			<%= label_tag "Förderbeitrag" %>
			<%= text_field_tag :foerderbeitrag, @Foerdermitglied.foerderbeitrag %>  
		</p>
  	</div>
  	<% end %>
  	
  	<% if @Mitglied != nil %>
  	<div name="Mitglied">
  		<p>
			<%= label_tag "RV Datum:" %>
			<%= text_field_tag :rvDatum, @Mitglied.rvDatum %>  
		</p>
  	</div>
  	<% end %>
  	
  	<% if @Partner != nil %>
  	<div name="Partner">
  		<p>
			<%= label_tag "Partner:" %>
			<%= text_field_tag :partner, @Partner.partner %>  
		</p>
		
		<p>
			<%= label_tag "Berechtigung" %>
			<%= text_field_tag :berechtigung, @Partner.berechtigung %>  
		</p>
  	</div>
  	<% end %>
  	
	
 	<p>
		<%= label_tag "Name:" %>
		<%= text_field_tag :name, @Person.name %>  
	</p>
	
	<p>
		<%= label_tag "Vorname:" %>
		<%= text_field_tag :vorname, @Person.vorname %>  
	</p>
	
	<p>
		<%= label_tag "Email:" %>
		<%= email_field_tag :email, @OZBPerson.email %>  
	</p>	
	
	<p>
		<%= label_tag "Passwort:" %>
		<%= password_field_tag 'password', @OZBPerson.password %>  
	</p>	
	  
	<p>
		<%= label_tag "Geburtsdatum:" %>  
		<%= text_field_tag :gebDatum, @Person.geburtsdatum %>
	</p>  
	  
	<p>
		<%= label_tag "Straße:" %>
		<%= text_field_tag :strasse, @Person.strasse %>
	</p>
	
	<p>
		<%= label_tag "PLZ:" %>
		<%= text_field_tag :plz, @Person.plz %>  
	</p>
	
	<p>
		<%= label_tag "Ort:" %>
		<%= text_field_tag :ort, @Person.ort %>  
	</p>
	
	<p>
		<%= label_tag "Telefon:" %>
		<% if @Telefon[0] != nil %>
			<%= telephone_field_tag :telefon, @Telefon[0].telefonNr %>  
		<% else %>
			<%= telephone_field_tag :telefon %>
		<% end %>
	</p>
	
	<p>
		<%= label_tag "Fax:" %>
		<% if @Fax[0] != nil %>		
			<%= telephone_field_tag :fax, @Fax[0].telefonNr %>
		<% else %>
			<%= telephone_field_tag :fax %>
		<% end %>
	</p>
	
