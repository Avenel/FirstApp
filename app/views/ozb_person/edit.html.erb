<script>
	function show_role()
	{
		$("div#Foerdermitglied").hide();
	    $("div#Student").hide();
    	$("div#Mitglied").hide();
    	$("div#Partner").hide();
    	$("div#Gesellschafter").hide();
	    var role = $('select#rolle').val();
	    switch (role) {
		    case "F":
		    	$("div#Foerdermitglied").show();
		    	break;
		    case "S":
		    	$("div#Student").show();
		    	break;
		    case "G":
		    	$("div#Gesellschafter").show();
		    	break;
		    case "P":
		    	$("div#Partner").show();
		    	break;
		    case "M":
		    	$("div#Mitglied").show();
		    	break;
		    default:
		}		
	}
</script>