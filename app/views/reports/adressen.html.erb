<h1>Alle Adressen</h1>

<table>

  <tr>
    <th>Name</th>
    <th>Vorname</th>
    <th>Straße</th>
    <th>Hausnummer</th>
    <th>Postleitzahl</th>
    <th>Ort</th>
  </tr>
  
  <% i=0 %>
  <% @personen.each do |person| %>
    <% if i%2 == 0 then bg_color="white" else bg_color="lightgrey" end %>
    <tr style="background:<%= bg_color %>;">
      <td><%= person.name %></td>
      <td><%= person.vorname %></td>
      <td><%= person.strasse %></td>
      <td><%= person.hausnr %></td>
      <td><%= person.plz %></td>
      <td><%= person.ort %></td>
    </tr>
  <% i += 1 %>
  <% end %>

</table>

<!-- Seitennavigation -->
<div class="paginateBox" >
  <%= will_paginate @personen %> 
</div>

<table class="actions">
  <tr>
    <td><%= link_to "Zurück", "/Admin", :class => "cancel_link" %></td>
  </tr>
</table>


