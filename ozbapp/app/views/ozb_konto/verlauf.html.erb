<%= render :partial => '/verwaltung/navigation' %>

<h3>KKL-Verlauf > Konto <%= @ozb_konto.KtoNr %></h3>

<table class="table table-bordered table-striped tablesorter">
	<thead>
		<tr>
			<th class="header"><%= KklVerlauf.human_attribute_name(:KKLAbDatum) %></th>
			<th class="header"><%= KklVerlauf.human_attribute_name(:KKL) %></th>
		</tr>
	</thead>

	<tbody>
		<% @verlauf.each do |v| %>
			<tr>
				<td><%= v.KKLAbDatum.strftime("%d.%m.%Y") %></td>
				<td><%= v.KKL %></td>
			</tr>
		<% end %>
	</tbody>
</table>

