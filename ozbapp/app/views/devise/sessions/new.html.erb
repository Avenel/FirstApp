<div class="well form-horizontal">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <legend>
    	
    	<font color="black">
          <font color="blue">o</font><font color="red">Z</font><font color="blue">/</font><font color="red">B</font>
        </font>
    	Anmeldung
    	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    </legend>
    <div class="control-group">
      <%= f.label :Mitgliedsnummer, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :id, :class => "input-xlarge" %>
      </div>
      <br />
      <%= f.label :Passwort, :class => "control-label" %>
      <div class="controls">
        <%= f.password_field :password, :class => "input-xlarge" %>
      </div>
	  <br />
	  <% if devise_mapping.rememberable? -%>        
	  <div class="controls">
        <label class="checkbox">
        	<%= f.check_box :remember_me %>
            <%= f.label :Angemeldet_bleiben %>
        </label>
      </div>
      <% end %>
      <br />
      <div class="controls">
	  <%= f.submit "Einloggen", :class => "btn btn-primary" %>
	  </div>
	  <br />
	  <div class="controls">
      <%= render :partial => "devise/shared/links" %>
      </div>
    </div>   
  </fieldset>
<% end %>
</div>  




